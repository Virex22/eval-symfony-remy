{% extends 'base.html.twig' %}

{% block title %}Request{% endblock %}

{% block body %}
    <h1>Request</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ request.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ request.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ request.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ request.createdAt ? request.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('crud_request_index') }}">back to list</a>

    <a href="{{ path('crud_request_edit', {'id': request.id}) }}">edit</a>

    {{ include('crud_request/_delete_form.html.twig') }}
{% endblock %}
